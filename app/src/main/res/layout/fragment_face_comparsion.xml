<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FaceComparsionFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/comparse_iv_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/main_iv_border"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/comparse_iv_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/main_iv_border"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/comparse_tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:id="@+id/comparse_btn_camera1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>
            <Button
                android:id="@+id/comparse_btn_photo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相册"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:id="@+id/comparse_btn_camera2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>
            <Button
                android:id="@+id/comparse_btn_photo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相册"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/comparse_btn_comparse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人脸对比"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"/>

</LinearLayout>